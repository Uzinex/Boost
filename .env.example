# ============================================================
# Uzinex Boost ‚Äî Example Environment Configuration
# ============================================================
#
# Copy this file to `.env` and adjust values for your deployment.
# It is designed to work for local development and Docker Compose
# (see infra/docker-compose.yml).
# ============================================================

# ------------------------------------------------------------
# üîß Core application settings
# ------------------------------------------------------------
APP_NAME=Uzinex Boost
APP_VERSION=2.0.0
APP_ENV=development
API_V1_PREFIX=/api/v1
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BASE_DOMAIN=http://localhost
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173
LOG_LEVEL=INFO
TIMEZONE=Asia/Tashkent
RAILWAY_MODE=false
TELEGRAM_DEBUG_MODE=false

# ------------------------------------------------------------
# üóÑ Database configuration (PostgreSQL)
# ------------------------------------------------------------
DB_HOST=postgres
DB_PORT=5432
DB_USER=boost
DB_PASSWORD=boost
DB_NAME=boost
# Full async SQLAlchemy URL used by the backend and Alembic
DATABASE_URL=postgresql+asyncpg://boost:boost@postgres:5432/boost

# ------------------------------------------------------------
# ‚ö° Redis cache configuration
# ------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0

# ------------------------------------------------------------
# üîí Security / JWT
# ------------------------------------------------------------
SECRET_KEY=change-me-please
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
JWT_SECRET=change-me-please

# ------------------------------------------------------------
# üí∞ Business defaults
# ------------------------------------------------------------
UZT_TO_SUM_RATE=75.0
START_BONUS=100.0
REWARD_CHANNEL=0.6
REWARD_GROUP=0.4

# ------------------------------------------------------------
# ü§ñ Telegram integration (backend adapters)
# ------------------------------------------------------------
TELEGRAM_BOT_TOKEN=0000000000:replace-me
TELEGRAM_WEBHOOK_URL=

# ------------------------------------------------------------
# ü§ñ Telegram bot service (apps/bot)
# ------------------------------------------------------------
BOOST_BOT_TOKEN=0000000000:replace-me
BOOST_BACKEND_URL=http://backend:8000/api/v1
BOOST_BOT_BACKEND_TOKEN=
BOOST_BOT_ADMIN_IDS=
BOOST_BOT_DEFAULT_LANG=ru
BOOST_BOT_TIMEOUT=10.0

# ------------------------------------------------------------
# üóÑ Alembic / migrations helper variables
# ------------------------------------------------------------
ALEMBIC_CONFIG=apps/backend/alembic.ini

# ------------------------------------------------------------
# üê≥ Docker compose helper variables
# ------------------------------------------------------------
POSTGRES_DB=${DB_NAME}
POSTGRES_USER=${DB_USER}
POSTGRES_PASSWORD=${DB_PASSWORD}
NGINX_HOST_PORT=8080

# ------------------------------------------------------------
# ‚öôÔ∏è Miscellaneous
# ------------------------------------------------------------
PYTHONPATH=apps/backend/src
